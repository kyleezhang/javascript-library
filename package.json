{
  "name": "ky-tools",
  "version": "1.0.0-beta.1",
  "description": "javascript函数工具库",
  "main": "dist/bundle.cjs.js",
  "module": "dist/bundle.esm.js",
  "types": "dist/types/main.d.ts",
  "files": [
    "dist"
  ],
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/jest": "^26.0.24",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "coveralls": "^3.1.1",
    "eslint": "^7.30.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.23.4",
    "husky": "^4.3.8",
    "jest": "^27.0.6",
    "lint-staged": "^11.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.52.8",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.5"
  },
  "scripts": {
    "test": "jest --coverage",
    "clean": "rimraf dist",
    "build": "npm run clean && rollup --config rollup.config.js",
    "lint": "eslint lib --ext '.js,.ts' --fix",
    "report-coverage": "cat ./coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kyleezhang/javascript-library.git"
  },
  "keywords": [
    "typescript",
    "javascript",
    "tools"
  ],
  "author": "kyleezhang",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kyleezhang/javascript-library/issues"
  },
  "homepage": "https://github.com/kyleezhang/javascript-library#readme",
  "lint-staged": {
    "lib/**/*.{js, ts}": [
      "eslint lib --ext '.js,.ts' --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
