{
    "include": [
      "lib",
      "test"
    ],
    "exclude": [
      "node_modules"
    ],
    "compilerOptions": {
        "module": "esnext",
        "target": "ES6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "lib": ["dom", "ESNext", "es2015"],
        "types": ["jest"],
        "declaration": true,
        "declarationDir": "dist/types",
        "allowJs": true,
        "checkJs": true,
        "baseUrl": "./",
        "paths": {
          "@/*": [
            "lib/*",
          ]
        }
    }
}